*
  box-sizing:border-box
html, body
  height:100%

#notification
  color:red

.pull-left
  float:left
.pull-right
  float:right
.float-wrapper:after
  content:''
  display:block
  clear:both

div[class*="col-"]
  height:100%
.col-30
  width:30%
.col-50
  width:50%
.col-70
  width:70%

div[class*="grid-"]
  height:100%
  display:grid
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr))
